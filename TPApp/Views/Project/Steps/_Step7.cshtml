@model TPApp.ViewModel.StepContentVm
@using System.IO

@{
    var payment = Model.StepData as TPApp.Entities.AdvancePaymentConfirmation;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-money-check-alt"></i> Bước 7: Xác nhận Tạm ứng
        </h5>
        @if (payment != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="7" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (payment != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Số tiền tạm ứng:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success fs-6">
                        <i class="fas fa-dollar-sign"></i> @payment.SoTienTamUng.ToString("N0") VNĐ
                    </span>
                </dd>

                <dt class="col-sm-3">Chứng từ chuyển tiền:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(payment.ChungTuChuyenTienFile))
                    {
                        <i class="fas fa-file-pdf text-danger"></i> 
                        <strong>@System.IO.Path.GetFileName(payment.ChungTuChuyenTienFile)</strong>
                    }
                    else
                    {
                        <span class="text-muted">Chưa có file</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày chuyển:</dt>
                <dd class="col-sm-9"><strong>@payment.NgayChuyen.ToString("dd/MM/yyyy")</strong></dd>

                <dt class="col-sm-3">Đã xác nhận nhận tiền:</dt>
                <dd class="col-sm-9">
                    @if (payment.DaXacNhanNhanTien)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã xác nhận</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-times"></i> Chưa xác nhận</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@payment.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> 
                <strong>Mô tả:</strong> Xác nhận tạm ứng theo hợp đồng
            </div>
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại bước trước
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục bước @(Model.StepNumber + 1) <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>
