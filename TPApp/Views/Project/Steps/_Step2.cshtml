@model TPApp.ViewModel.StepContentVm

@{
    var nda = Model.StepData as TPApp.Entities.NDAAgreement;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-file-signature"></i> Bước 2: Thỏa thuận Bảo mật (NDA)
        </h5>
        @if (nda != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="2" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (nda != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Bên A:</dt>
                <dd class="col-sm-9"><strong>@nda.BenA</strong></dd>

                <dt class="col-sm-3">Bên B:</dt>
                <dd class="col-sm-9"><strong>@nda.BenB</strong></dd>

                <dt class="col-sm-3">Loại NDA:</dt>
                <dd class="col-sm-9">@nda.LoaiNDA</dd>

                <dt class="col-sm-3">Thời hạn bảo mật:</dt>
                <dd class="col-sm-9">@nda.ThoiHanBaoMat</dd>

                <dt class="col-sm-3">Xác nhận ký số:</dt>
                <dd class="col-sm-9">@(nda.XacNhanKySo ?? "Chưa cập nhật")</dd>

                <dt class="col-sm-3">Đã đồng ý điều khoản:</dt>
                <dd class="col-sm-9">
                    @if (nda.DaDongY)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã đồng ý</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-times"></i> Chưa đồng ý</span>
                    }
                </dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.Steps[1].StatusId > 0)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-clock"></i> Chưa hoàn thành</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@nda.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>

                @if (nda.NgaySua.HasValue)
                {
                    <dt class="col-sm-3">Ngày cập nhật:</dt>
                    <dd class="col-sm-9">@nda.NgaySua.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
            </dl>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> 
                <strong>Mô tả:</strong> Ký kết thỏa thuận bảo mật giữa các bên
            </div>
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="1">
            <i class="fas fa-arrow-left"></i> Quay lại bước trước
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục bước @(Model.StepNumber + 1) <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>

