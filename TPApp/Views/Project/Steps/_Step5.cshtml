@model TPApp.ViewModel.StepContentVm
@using System.IO

@{
    var negotiation = Model.StepData as TPApp.Entities.NegotiationForm;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-handshake"></i> Bước 5: Đàm phán Thương mại
        </h5>
        @if (negotiation != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="5" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (negotiation != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Giá chốt cuối cùng:</dt>
                <dd class="col-sm-9">
                    @if (negotiation.GiaChotCuoiCung.HasValue)
                    {
                        <span class="badge bg-success fs-6">
                            <i class="fas fa-dollar-sign"></i> @negotiation.GiaChotCuoiCung.Value.ToString("N0") VNĐ
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">Chưa cập nhật</span>
                    }
                </dd>

                <dt class="col-sm-3">Điều khoản thanh toán:</dt>
                <dd class="col-sm-9">
                    <div class="border rounded p-2 bg-light">
                        @Html.Raw(negotiation.DieuKhoanThanhToan.Replace("\n", "<br />"))
                    </div>
                </dd>

                <dt class="col-sm-3">Biên bản thương lượng:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(negotiation.BienBanThuongLuongFile))
                    {
                        <i class="fas fa-file-pdf text-danger"></i> 
                        <strong>@System.IO.Path.GetFileName(negotiation.BienBanThuongLuongFile)</strong>
                    }
                    else
                    {
                        <span class="text-muted">Chưa có file</span>
                    }
                </dd>

                <dt class="col-sm-3">Hình thức ký:</dt>
                <dd class="col-sm-9"><strong>@negotiation.HinhThucKy</strong></dd>

                <dt class="col-sm-3">Đã ký số:</dt>
                <dd class="col-sm-9">
                    @if (negotiation.DaKySo)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã ký</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-times"></i> Chưa ký</span>
                    }
                </dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.Steps[4].StatusId > 0)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-clock"></i> Chưa hoàn thành</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@negotiation.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>

                @if (negotiation.NgaySua.HasValue)
                {
                    <dt class="col-sm-3">Ngày cập nhật:</dt>
                    <dd class="col-sm-9">@negotiation.NgaySua.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
            </dl>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> 
                <strong>Mô tả:</strong> Đàm phán điều khoản hợp đồng và giá cả
            </div>
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại bước trước
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục bước @(Model.StepNumber + 1) <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>

