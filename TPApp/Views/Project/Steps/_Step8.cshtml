@model TPApp.ViewModel.StepContentVm

@{
    var impl = Model.StepData as TPApp.Entities.ImplementationLog;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-tasks"></i> Bước 8: Triển khai</h5>
        @if (impl != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="8" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (impl != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Giai đoạn:</dt>
                <dd class="col-sm-9"><strong>@impl.GiaiDoan</strong></dd>

                <dt class="col-sm-3">Kết quả thực hiện:</dt>
                <dd class="col-sm-9">
                    <div class="border rounded p-2 bg-light">
                        @Html.Raw((impl.KetQuaThucHien ?? "Chưa cập nhật").Replace("\n", "<br />"))
                    </div>
                </dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@impl.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        }
        else
        {
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>
