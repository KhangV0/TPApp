@model TPApp.ViewModel.StepContentVm

@{
    var handover = Model.StepData as TPApp.Entities.HandoverReport;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-handshake"></i> Bước 9: Bàn giao</h5>
        @if (handover != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="9" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (handover != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Đã hoàn thành đào tạo:</dt>
                <dd class="col-sm-9">
                    @if (handover.DaHoanThanhDaoTao)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-times"></i> Chưa hoàn thành</span>
                    }
                </dd>

                <dt class="col-sm-3">Đánh giá:</dt>
                <dd class="col-sm-9">
                    @if (handover.DanhGiaSao.HasValue)
                    {
                        for (int i = 1; i <= 5; i++)
                        {
                            if (i <= handover.DanhGiaSao.Value)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }
                            else
                            {
                                <i class="far fa-star text-warning"></i>
                            }
                        }
                        <span class="ms-2">(@handover.DanhGiaSao.Value/5)</span>
                    }
                    else
                    {
                        <span class="text-muted">Chưa đánh giá</span>
                    }
                </dd>

                <dt class="col-sm-3">Nhận xét:</dt>
                <dd class="col-sm-9">@(handover.NhanXet ?? "Chưa có nhận xét")</dd>
            </dl>
        }
        else
        {
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>
