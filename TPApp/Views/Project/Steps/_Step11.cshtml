@model TPApp.ViewModel.StepContentVm

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">
            <i class="fas fa-flag-checkered"></i> Bước 11: Thanh lý Hợp đồng
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> 
            <strong>Bước cuối cùng:</strong> Thanh lý hợp đồng và hoàn tất dự án
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Dự án:</strong> @Model.Project.ProjectName</p>
            </div>
            <div class="col-md-6">
                <p><strong>Trạng thái:</strong> 
                    @if (Model.Steps[10].StatusId > 0)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-clock"></i> Chưa hoàn thành</span>
                    }
                </p>
            </div>
        </div>
        
        <a href="@Url.Action("Create", "Liquidation", new { projectId = Model.ProjectId })" 
           class="btn btn-success">
            <i class="fas fa-edit"></i> Xem chi tiết / Chỉnh sửa
        </a>
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại bước trước
        </button>
        @if (Model.Steps[10].StatusId > 0)
        {
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-success">
                <i class="fas fa-check-circle"></i> Dự án hoàn thành - Về Dashboard
            </a>
        }
    </div>
</div>
