@model TPApp.ViewModel.StepContentVm
@using System.IO

@{
    var contract = Model.StepData as TPApp.Entities.EContract;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-file-contract"></i> Bước 6: Ký Hợp đồng Điện tử
        </h5>
        @if (contract != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="6" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (contract != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Số hợp đồng:</dt>
                <dd class="col-sm-9"><strong class="text-primary">@contract.SoHopDong</strong></dd>

                <dt class="col-sm-3">File hợp đồng:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(contract.FileHopDong))
                    {
                        <i class="fas fa-file-pdf text-danger"></i> 
                        <strong>@System.IO.Path.GetFileName(contract.FileHopDong)</strong>
                    }
                    else
                    {
                        <span class="text-muted">Chưa có file</span>
                    }
                </dd>

                <dt class="col-sm-3">Người ký bên A:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(contract.NguoiKyBenA))
                    {
                        <strong>@contract.NguoiKyBenA</strong>
                    }
                    else
                    {
                        <span class="text-muted">Chưa cập nhật</span>
                    }
                </dd>

                <dt class="col-sm-3">Người ký bên B:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(contract.NguoiKyBenB))
                    {
                        <strong>@contract.NguoiKyBenB</strong>
                    }
                    else
                    {
                        <span class="text-muted">Chưa cập nhật</span>
                    }
                </dd>

                <dt class="col-sm-3">Trạng thái ký:</dt>
                <dd class="col-sm-9">
                    @if (contract.TrangThaiKy == "Đã hoàn tất")
                    {
                        <span class="badge bg-success"><i class="fas fa-check-double"></i> @contract.TrangThaiKy</span>
                    }
                    else if (contract.TrangThaiKy == "Đã ký 1 bên")
                    {
                        <span class="badge bg-warning"><i class="fas fa-check"></i> @contract.TrangThaiKy</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary"><i class="fas fa-clock"></i> @contract.TrangThaiKy</span>
                    }
                </dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.Steps[5].StatusId > 0)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-clock"></i> Chưa hoàn thành</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@contract.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>

                @if (contract.NgaySua.HasValue)
                {
                    <dt class="col-sm-3">Ngày cập nhật:</dt>
                    <dd class="col-sm-9">@contract.NgaySua.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
            </dl>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> 
                <strong>Mô tả:</strong> Ký kết hợp đồng điện tử giữa các bên
            </div>
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại bước trước
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục bước @(Model.StepNumber + 1) <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>
