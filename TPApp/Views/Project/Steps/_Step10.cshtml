@model TPApp.ViewModel.StepContentVm

@{
    var acceptance = Model.StepData as TPApp.Entities.AcceptanceReport;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-clipboard-check"></i> Bước 10: Nghiệm thu</h5>
        @if (acceptance != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="10" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (acceptance != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Ngày nghiệm thu:</dt>
                <dd class="col-sm-9"><strong>@acceptance.NgayNghiemThu.ToString("dd/MM/yyyy")</strong></dd>

                <dt class="col-sm-3">Kết luận:</dt>
                <dd class="col-sm-9">@(acceptance.KetLuanNghiemThu ?? "Chưa có kết luận")</dd>

                <dt class="col-sm-3">Trạng thái ký:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">@acceptance.TrangThaiKy</span>
                </dd>
            </dl>
        }
        else
        {
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>
