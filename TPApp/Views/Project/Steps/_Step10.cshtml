@model TPApp.ViewModel.StepContentVm

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-clipboard-check"></i> Bước 10: Biên bản Nghiệm thu
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> 
            <strong>Mô tả:</strong> Nghiệm thu và đánh giá sản phẩm
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Dự án:</strong> @Model.Project.ProjectName</p>
            </div>
            <div class="col-md-6">
                <p><strong>Trạng thái:</strong> 
                    @if (Model.Steps[9].StatusId > 0)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-clock"></i> Chưa hoàn thành</span>
                    }
                </p>
            </div>
        </div>
        
        <a href="@Url.Action("Create", "Acceptance", new { projectId = Model.ProjectId })" 
           class="btn btn-primary">
            <i class="fas fa-edit"></i> Xem chi tiết / Chỉnh sửa
        </a>
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary step-nav-btn" data-step="@(Model.StepNumber - 1)">
            <i class="fas fa-arrow-left"></i> Quay lại bước trước
        </button>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục bước @(Model.StepNumber + 1) <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>
