@model TPApp.ViewModel.StepContentVm

@{
    var techTransfer = Model.StepData as TPApp.Entities.TechTransferRequest;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-file-alt"></i> Bước 1: Yêu cầu Chuyển giao Công nghệ
        </h5>
        @if (techTransfer != null)
        {
            <button class="btn btn-light btn-sm edit-step-btn" data-step="1" data-project-id="@Model.ProjectId">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </button>
        }
    </div>
    <div class="card-body">
        @if (techTransfer != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Họ tên:</dt>
                <dd class="col-sm-9">@techTransfer.HoTen</dd>

                <dt class="col-sm-3">Chức vụ:</dt>
                <dd class="col-sm-9">@(techTransfer.ChucVu ?? "Chưa cập nhật")</dd>

                <dt class="col-sm-3">Đơn vị:</dt>
                <dd class="col-sm-9">@(techTransfer.DonVi ?? "Chưa cập nhật")</dd>

                <dt class="col-sm-3">Địa chỉ:</dt>
                <dd class="col-sm-9">@(techTransfer.DiaChi ?? "Chưa cập nhật")</dd>

                <dt class="col-sm-3">Điện thoại:</dt>
                <dd class="col-sm-9">@techTransfer.DienThoai</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@techTransfer.Email</dd>

                <dt class="col-sm-3">Tên công nghệ:</dt>
                <dd class="col-sm-9"><strong>@techTransfer.TenCongNghe</strong></dd>

                <dt class="col-sm-3">Lĩnh vực:</dt>
                <dd class="col-sm-9">@(techTransfer.LinhVuc ?? "Chưa cập nhật")</dd>

                <dt class="col-sm-3">Mô tả nhu cầu:</dt>
                <dd class="col-sm-9">
                    <div class="border p-3 bg-light">
                        @Html.Raw(techTransfer.MoTaNhuCau?.Replace("\n", "<br/>"))
                    </div>
                </dd>

                <dt class="col-sm-3">Ngân sách dự kiến:</dt>
                <dd class="col-sm-9">
                    @if (techTransfer.NganSachDuKien.HasValue)
                    {
                        <span class="badge bg-success">@techTransfer.NganSachDuKien.Value.ToString("N0") VNĐ</span>
                    }
                    else
                    {
                        <span class="text-muted">Chưa xác định</span>
                    }
                </dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.Steps[0].StatusId > 0)
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-warning"><i class="fas fa-clock"></i> Chưa hoàn thành</span>
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@techTransfer.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>

                @if (techTransfer.NgaySua.HasValue)
                {
                    <dt class="col-sm-3">Ngày cập nhật:</dt>
                    <dd class="col-sm-9">@techTransfer.NgaySua.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
            </dl>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> 
                <strong>Mô tả:</strong> Tạo yêu cầu chuyển giao công nghệ từ nhà cung ứng
            </div>
            <p class="text-muted">Chưa có dữ liệu cho bước này.</p>
        }
    </div>
    <div class="card-footer">
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại Dashboard
        </a>
        @if (Model.StepNumber < 11 && Model.Steps[Model.StepNumber].IsAccessible)
        {
            <button class="btn btn-primary step-nav-btn" data-step="@(Model.StepNumber + 1)">
                Tiếp tục bước @(Model.StepNumber + 1) <i class="fas fa-arrow-right"></i>
            </button>
        }
    </div>
</div>

