@model TPApp.Entities.TechTransferRequest

<form id="editStep1Form">
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="HoTen" class="form-label">Họ tên <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen" required />
        </div>
        <div class="col-md-6 mb-3">
            <label for="ChucVu" class="form-label">Chức vụ</label>
            <input type="text" class="form-control" id="ChucVu" name="ChucVu" value="@Model.ChucVu" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="DonVi" class="form-label">Đơn vị</label>
            <input type="text" class="form-control" id="DonVi" name="DonVi" value="@Model.DonVi" />
        </div>
        <div class="col-md-6 mb-3">
            <label for="DiaChi" class="form-label">Địa chỉ</label>
            <input type="text" class="form-control" id="DiaChi" name="DiaChi" value="@Model.DiaChi" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="DienThoai" class="form-label">Điện thoại <span class="text-danger">*</span></label>
            <input type="tel" class="form-control" id="DienThoai" name="DienThoai" value="@Model.DienThoai" required />
        </div>
        <div class="col-md-6 mb-3">
            <label for="Email" class="form-label">Email <span class="text-danger">*</span></label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        </div>
    </div>

    <div class="mb-3">
        <label for="TenCongNghe" class="form-label">Tên công nghệ <span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="TenCongNghe" name="TenCongNghe" value="@Model.TenCongNghe" required />
    </div>

    <div class="mb-3">
        <label for="LinhVuc" class="form-label">Lĩnh vực</label>
        <input type="text" class="form-control" id="LinhVuc" name="LinhVuc" value="@Model.LinhVuc" />
    </div>

    <div class="mb-3">
        <label for="MoTaNhuCau" class="form-label">Mô tả nhu cầu <span class="text-danger">*</span></label>
        <textarea class="form-control" id="MoTaNhuCau" name="MoTaNhuCau" rows="5" required>@Model.MoTaNhuCau</textarea>
    </div>

    <div class="mb-3">
        <label for="NganSachDuKien" class="form-label">Ngân sách dự kiến (VNĐ)</label>
        <input type="number" class="form-control" id="NganSachDuKien" name="NganSachDuKien" value="@Model.NganSachDuKien" step="1000" />
    </div>
</form>
