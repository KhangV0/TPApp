@model TPApp.Entities.LiquidationReport
@using System.Globalization

@{
    ViewData["Title"] = "Chi tiết Biên bản thanh lý";
    var statusClass = Model.HopDongClosed ? "success" : "warning";
    var statusText = Model.HopDongClosed ? "Hợp đồng đã Closed" : "Đang chờ thanh toán";
}

<div class="container mt-5 mb-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0"><i class="fas fa-file-invoice me-2"></i>@ViewData["Title"] #@Model.Id</h2>
            <span class="badge bg-light text-primary">@Model.NgayTao.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="card-body">
            <!-- Summary -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <p><strong>Dự án ID:</strong> @Model.DuAnId</p>
                    <p><strong>E-Contract ID:</strong> @Model.EContractId</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h4><span class="badge bg-@statusClass">@statusText</span></h4>
                </div>
            </div>

            <hr />

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted">Giá trị thanh toán còn lại</h6>
                    <p class="fs-5 fw-bold text-primary">
                        @(Model.GiaTriThanhToanConLai?.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN")) ?? "0 đ")
                    </p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Số hóa đơn</h6>
                    <p class="fs-5">@Model.SoHoaDon</p>
                </div>
                <div class="col-12">
                    <h6 class="text-muted">Hóa đơn đính kèm</h6>
                    @if (!string.IsNullOrEmpty(Model.HoaDonFile))
                    {
                        <a asp-action="DownloadInvoice" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-download me-2"></i>Tải về hóa đơn
                        </a>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Không có bản scan</span>
                    }
                </div>
            </div>

            <div class="alert alert-@(Model.SanDaChuyenTien ? "success" : "warning") d-flex align-items-center" role="alert">
                <i class="fas fa-@(Model.SanDaChuyenTien ? "check-circle" : "exclamation-circle") fa-2x me-3"></i>
                <div>
                    <strong>Trạng thái thanh toán từ Sàn:</strong> <br>
                    @(Model.SanDaChuyenTien ? "Đã chuyển tiền cho Bên bán." : "Chưa xác nhận chuyển tiền.")
                </div>
            </div>

            <!-- Actions -->
            @if (!Model.SanDaChuyenTien)
            {
                <div class="card bg-light border-warning mt-3">
                    <div class="card-body text-center">
                        <p class="mb-2">Nếu đã thực hiện chuyển tiền, vui lòng xác nhận để đóng hợp đồng.</p>
                        <form asp-action="ConfirmPayment" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-warning text-dark fw-bold">
                                <i class="fas fa-money-check-alt me-2"></i>Xác nhận sàn đã chuyển tiền
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer bg-white">
            <a asp-action="Create" class="btn btn-outline-secondary"><i class="fas fa-plus me-2"></i>Tạo phiếu mới</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary float-end"><i class="fas fa-home me-2"></i>Về trang chủ</a>
        </div>
    </div>
</div>
