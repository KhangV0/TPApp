@model List<TPApp.ViewModel.TinSuKienTabVm>

<section class="technology-tabs">
    <div class="container">

        <!-- TAB HEADER: sinh tự động theo Menu -->
        <ul class="nav nav-tabs justify-content-center mb-4" id="dynamicTabs" role="tablist">
            @for (int i = 0; i < Model.Count; i++)
            {
                var tab = Model[i];
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(i == 0 ? "active" : "")"
                            id="tab-@tab.MenuId"
                            data-bs-toggle="tab"
                            data-bs-target="#content-@tab.MenuId"
                            type="button"
                            role="tab">
                        @tab.Title
                    </button>
                </li>
            }
        </ul>

        <!-- TAB CONTENT: mỗi menu 1 tab-pane -->
        <div class="tab-content" id="dynamicTabContent">
            @for (int i = 0; i < Model.Count; i++)
            {
                var tab = Model[i];
                <div class="tab-pane fade @(i == 0 ? "show active" : "")"
                     id="content-@tab.MenuId" role="tabpanel">
                    <div class="row g-4">
                        @foreach (var item in tab.Items)
                        {
                            <div class="col-md-4">
                                <a href="@item.Link" class="text-decoration-none text-dark">
                                    <div class="card h-100 shadow-sm border-0 hover-shadow">
                                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" />
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold">@item.Title</h5>
                                            <p class="card-text">@item.Description</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

    </div>
</section>
